{
  "name": "@baerae-zkap/design-system",
  "version": "0.1.13",
  "description": "ZKAP Design System - React & React Native Components with AI-readable documentation",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "typesVersions": {
    "*": {
      "native": [
        "./dist/native/index.d.ts"
      ],
      "*": [
        "./dist/*"
      ]
    }
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./native": {
      "types": "./dist/native/index.d.ts",
      "import": "./dist/native/index.mjs",
      "require": "./dist/native/index.js"
    },
    "./styles.css": "./styles.css",
    "./docs": "./docs/COMPONENTS.md",
    "./docs/*": "./docs/*"
  },
  "files": [
    "dist",
    "docs",
    "styles.css",
    "src/**/*.md",
    "README.md",
    "COMPONENTS.md",
    "llms.txt",
    "llms-full.txt"
  ],
  "sideEffects": [
    "*.css"
  ],
  "scripts": {
    "build": "tsup",
    "build:watch": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run build"
  },
  "peerDependencies": {
    "lucide-react-native": ">=0.300.0",
    "react": ">=18.0.0",
    "react-native": ">=0.70.0",
    "react-native-svg": ">=13.0.0"
  },
  "peerDependenciesMeta": {
    "react-native": {
      "optional": true
    },
    "react-native-svg": {
      "optional": true
    },
    "lucide-react-native": {
      "optional": true
    }
  },
  "devDependencies": {
    "@react-native-community/datetimepicker": "^8.2.0",
    "@types/react": "^19",
    "lucide-react-native": "^0.563.0",
    "react": "^19",
    "react-native": "^0.81.0",
    "react-native-linear-gradient": "^2.8.3",
    "react-native-reanimated": "^4.2.1",
    "react-native-safe-area-context": "^5.6.2",
    "react-native-svg": "^15.15.2",
    "tsup": "^8",
    "typescript": "^5"
  },
  "keywords": [
    "design-system",
    "react",
    "react-native",
    "components",
    "ui",
    "zkap",
    "ai-docs"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/baerae-zkap/design-foundation.git",
    "directory": "packages/design-system"
  },
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  }
}
